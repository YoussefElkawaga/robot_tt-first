# API Keys
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Optional configurations
# Default wake words: bumblebee, hey barista, terminator, pico clock, alexa, hey google, computer, 
# grapefruit, grasshopper, picovoice, porcupine, jarvis, hey siri, ok google, americano, blueberry
# WAKE_WORD=computer
# SAVE_HISTORY=true
# ENABLE_BEEP=true     # Set to true to play beep sounds when wake word is detected

# Voice settings (run with LIST_VOICES=true to see available voices)
# VOICE_ID=0           # Voice ID or index number
# VOICE_RATE=150       # Speech rate (default is 200, lower is slower)
# VOICE_VOLUME=0.8     # Volume from 0.0 to 1.0

# Utility settings
# LIST_VOICES=true     # Set to true to list available voices and exit 